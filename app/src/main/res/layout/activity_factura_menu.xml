<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnInsertarFactura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar Factura" />

    <Button
        android:id="@+id/btnConsultarFactura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Factura"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnActualizarFactura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar Factura"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnEliminarFactura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Factura"
        android:layout_marginTop="10dp" />

</LinearLayout>