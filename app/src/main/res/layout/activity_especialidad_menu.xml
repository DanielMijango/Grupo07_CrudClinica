<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnInsertarEspecialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar Especialidad" />

    <Button
        android:id="@+id/btnConsultarEspecialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Especialidad" />

    <Button
        android:id="@+id/btnActualizarEspecialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar Especialidad" />

    <Button
        android:id="@+id/btnEliminarEspecialidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Especialidad" />

</LinearLayout>
