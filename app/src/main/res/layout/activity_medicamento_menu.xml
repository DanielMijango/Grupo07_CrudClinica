<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnInsertarMedicamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar Medicamento" />

    <Button
        android:id="@+id/btnConsultarMedicamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Medicamento"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnActualizarMedicamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar Medicamento"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnEliminarMedicamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Medicamento"
        android:layout_marginTop="10dp" />

</LinearLayout>
