<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnInsertarConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar Consulta" />

    <Button
        android:id="@+id/btnConsultarConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Consulta"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnActualizarConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar Consulta"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnEliminarConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Consulta"
        android:layout_marginTop="10dp" />

</LinearLayout>
