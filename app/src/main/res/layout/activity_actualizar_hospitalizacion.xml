<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner android:id="@+id/spinnerIdHospitalizacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner android:id="@+id/spinnerPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/editTextFechaIngreso"
        android:hint="Fecha Ingreso"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/editTextFechaAlta"
        android:hint="Fecha Alta"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/btnActualizar"
        android:text="Actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>