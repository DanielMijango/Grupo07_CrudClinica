<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID HospitalizaciÃ³n"
        android:textStyle="bold"
        android:paddingBottom="4dp"/>

    <Spinner
        android:id="@+id/spinnerIdHospitalizacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID Paciente"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:paddingBottom="4dp"/>

    <Spinner
        android:id="@+id/spinnerPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextFechaIngreso"
        android:hint="Fecha Ingreso"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"/>

    <EditText
        android:id="@+id/editTextFechaAlta"
        android:hint="Fecha Alta"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"/>

    <Button
        android:id="@+id/btnActualizar"
        android:text="Actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"/>
</LinearLayout>
