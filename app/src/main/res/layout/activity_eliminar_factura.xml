<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:padding="16dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:text="Seleccione ID de la Factura a eliminar:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Spinner android:id="@+id/spinnerEliminarFactura" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnEliminarFactura" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Eliminar Factura"/>

    </LinearLayout>
</ScrollView>
