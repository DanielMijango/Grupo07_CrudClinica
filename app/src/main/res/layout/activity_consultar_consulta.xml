<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Campo para escribir el nombre del paciente -->
    <EditText
        android:id="@+id/edtNombrePacienteBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Paciente"
        android:inputType="text" />

    <!-- BotÃ³n para buscar -->
    <Button
        android:id="@+id/btnBuscarConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Consulta"
        android:layout_marginTop="16dp"/>

    <!-- Resultado (puede ser un TextView o ListView si hay varios resultados) -->
    <TextView
        android:id="@+id/txtResultadoConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado:"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

</LinearLayout>
