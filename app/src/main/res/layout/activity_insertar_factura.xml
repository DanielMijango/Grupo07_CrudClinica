<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ID Factura -->
        <EditText
            android:id="@+id/edtIdFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Factura"
            android:maxLength="4"
            android:inputType="text" />

        <!-- ID Consulta -->
        <EditText
            android:id="@+id/edtIdConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Consulta"
            android:maxLength="4"
            android:inputType="text"
            android:layout_marginTop="8dp" />

        <!-- Fecha Factura -->
        <EditText
            android:id="@+id/edtFechaFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Factura (YYYY-MM-DD)"
            android:inputType="date"
            android:layout_marginTop="8dp" />

        <!-- BotÃ³n Guardar -->
        <Button
            android:id="@+id/btnGuardarFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Factura"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
