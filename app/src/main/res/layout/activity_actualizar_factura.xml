<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ID Factura (para buscar y actualizar) -->
        <EditText
            android:id="@+id/edtIdFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Factura"
            android:maxLength="4"
            android:inputType="text"
            android:importantForAutofill="no" />

        <!-- ID Consulta -->
        <EditText
            android:id="@+id/edtIdConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nuevo ID Consulta"
            android:maxLength="4"
            android:inputType="text"
            android:layout_marginTop="8dp" />

        <!-- Fecha Factura -->
        <EditText
            android:id="@+id/edtFechaFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nueva Fecha (YYYY-MM-DD)"
            android:inputType="date"
            android:layout_marginTop="8dp" />

        <!-- BotÃ³n Actualizar -->
        <Button
            android:id="@+id/btnActualizarFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar Factura"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
