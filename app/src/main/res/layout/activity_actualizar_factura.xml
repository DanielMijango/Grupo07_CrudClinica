<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

        <TextView android:text="Seleccione ID de la Factura:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Spinner android:id="@+id/spinnerFacturaActualizar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/edtFechaActualizarFactura" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Nueva fecha" android:focusable="false"/>
        <Button android:id="@+id/btnActualizarFactura" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Actualizar Factura"/>

    </LinearLayout>
</ScrollView>
