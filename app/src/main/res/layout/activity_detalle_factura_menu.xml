<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnInsertarDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar detalles de factura" />

    <Button
        android:id="@+id/btnConsultarDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar detalles de factura"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnActualizarDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar detalles de factura"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnEliminarDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar detalles de factura"
        android:layout_marginTop="10dp" />

</LinearLayout>